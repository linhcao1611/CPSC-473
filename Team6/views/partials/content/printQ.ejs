<div class="listQuestion">
	<% 	var i; for (i = 0; i<appdata.length; i++){ %>
			<div class="question">
					<button type="button" class="btn btn-link">
						<%= appdata[i][2] %> - 
						<%= appdata[i][3].length %> answers
					</button>					
								 				
					<div class="answer">
					<% if(appdata[i][3].length != 0) { %>
						<% var j; for(j=0;j<appdata[i][3].length; j++) { %>
							<li> <%=appdata[i][3][j] %> </li>
						<% } %>
					<% } %>
					<form class="addAnswer" action="/addA" method="post">
						<h5>Add a answer</h5>
						<input name="index" value="<%=i%>" hidden>
						<input type="text" name="newA">
						<input type="submit">
					</form>
					</div>
			</div>
				
		<% } %>	
</div>



